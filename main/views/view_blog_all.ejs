<div class="container clearfix">
  
   <div class="sixteen columns"> <h1 class="page-title">Blog<span class="line"></span></h1>
   </div><!-- Page Title -->
   
   
   <!-- Start Posts -->
   <div class="sixteen columns top bottom">   

	<% for(var i in entries){ var entry = entries[i]; %>
	   <div class="post bottom">
	      <h2 class="title bottom-2">
	      	<a href="/blog/entry/<%= i %>">
	      		<%= entry.title %>
	      	</a> <span class="line"></span></h2><!-- Title Post -->
	      
	      <div class="post-meta bottom-2">
	        <div class="meta"><span class="history  icon gray"></span> On <%= entry.date %> </div><!-- Date -->
	        <div class="meta"><span class="user icon gray"></span> By : <%= entry.author %> </div><!-- Author -->
	      </div><!-- End post-meta -->
	      
	      <div class="post-content">
	        <p>
	          	<%- entry.body %>
	        </p>
	      </div>
	   </div> 
	<% } %>
   
   <div class="clearfix"></div>

  </div><!-- <<< End Container >>> -->
